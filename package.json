{
  "name": "polymarket-prediction-cli",
  "version": "1.0.0",
  "description": "Production-grade CLI for Polymarket analysis, probability estimation, and strategy simulation",
  "type": "module",
  "bin": {
    "dominion-pm": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prepare": "pnpm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "polymarket",
    "prediction-markets",
    "cli",
    "analysis",
    "probability"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.2.15",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.0.7",
    "openai": "^4.73.0",
    "ora": "^8.0.1",
    "undici": "^6.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}

