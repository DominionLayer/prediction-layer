# Server Configuration
PORT=3100
HOST=0.0.0.0
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dominion_gateway

# Or use SQLite for MVP (comment out DATABASE_URL and use this)
# SQLITE_PATH=./data/gateway.db

# LLM Provider API Keys (kept secret on server)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Admin Token (for admin endpoints)
ADMIN_TOKEN=your-secure-admin-token-here

# Rate Limiting
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000

# Default User Quotas
DEFAULT_DAILY_REQUESTS=1000
DEFAULT_DAILY_TOKENS=100000
DEFAULT_MONTHLY_SPEND_CAP_USD=50

# Logging
LOG_LEVEL=info
LOG_PROMPTS=false

# JWT Secret (optional, for future JWT auth)
JWT_SECRET=your-jwt-secret-here

